{
  "name": "wad-cont",
  "version": "1.0.0",
  "description": "Web Application Development, continuous version",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "ts-node-dev --respawn --watch .env src/index.ts",
    "build": "npm --prefix frontend run build && tsc",
    "start": "node dist/index.js",
    "seed": "ts-node -e \"import { resetAndSeed } from './src/helpers/seed'; resetAndSeed()\"",
    "apidoc": "apidoc-markdown -i src/ -o API.md",
    "buildbundle": "esbuild dist/index.js --bundle --platform=node --outfile=dist/bundle.js --minify --external:sqlite3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mjendrasi23/wad-2.git"
  },
