    "@faker-js/faker": "^10.1.0",
    "@types/connect-sqlite3": "^0.9.6",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/passport": "^1.0.17",
    "connect-sqlite3": "^0.9.16",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-session": "^1.18.2",
    "formidable": "^3.5.4",
    "morgan": "^1.10.1",
    "passport": "^0.7.0",
    "passport-json": "^1.2.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
